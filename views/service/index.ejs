              <div class="form-group basic">
                <div class="input-wrapper">
                  <label class="label" for="statusInput">Status</label>
                  <select
                    class="form-control custom-select"
                    id="statusInput"
                    name="status"
                  >
                    <option value="pending">Pending</option>
                    <option value="accepted">accepted</option>
                  </select>
                </div>
              </div>

              <!-- for message -->
              <div class="form-group basic">
                <div class="input-wrapper">
                  <label class="label" for="messageInput">Message</label>
                  <textarea
                    class="form-control"
                    id="messageInput"
                    rows="3"
                    name="message"
                  ></textarea>
                </div>
              </div>

              <!-- for shelf -->
              <div class="form-group basic">
                <div class="input-wrapper">
                  <label class="label" for="shelfInput">Shelf</label>
                  <input
                    type="text"
                    id="shelfInput"
                    class="form-control"
                    placeholder="Shelf"
                    name="shelf"
                  />
                </div>
              </div>

              <p style="text-align: center; margin-top: 1rem">
                <button
                  class="btn btn-success btn-sm mb-2"
                  style="margin: 0 auto"
                  id="updateBtn"
                  type="button"
                >
                  Update
                </button>
                <button
                  class="btn btn-danger btn-sm mb-2"
                  style="margin: 0 auto"
                  onclick="document.getElementById('myModal').style.display = 'none'"
                >
                  Cancel
                </button>
              </p>
            </form>
          </div>
        </div>
      </div>

      <!-- dialog -->
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      var ALL_service_BOOKINGS = [];
      $.getJSON(
        "http://localhost:4000/api/getServiceBookings",
        function (data) {
          if (data.status == "success") {
            ALL_service_BOOKINGS = data.service;
            fillserviceBookings("pending");
          } else {
            alert("Something went wrong");
            console.log(data);
          }
        }
      );
      function fillserviceBookings() {
        var status = document.querySelector('input[name="status"]:checked').id;
        $("#serviceBookings").html("");
        ALL_service_BOOKINGS.forEach((service, index) => {
          if (service.status != status) return;
          $("#serviceBookings").append(
            `
            <div class="row ">
                            <div class="col-md-6">
                                <div class="card mb-3 p-2">
                                    <div class="card-body">
                                        <h5 class="card-title">Name: ${
                                          service.name
                                        }</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">Topic Name: ${
                                          service.serviceType
                                        }</h6>
                                        <p class="card-text">Date: ${
                                          service.serviceDate
                                        }</p>
                                        <p class="card-text">Description: ${
                                          service.message
                                        }</p>
                                        <p class="card-text badge
                                        ${
                                          service.status == "pending"? "bg-danger" : "bg-success"
                                        }">Status: ${service.status}</p>
                                        <td><input type="text" id="meetResponse" class="form-control" value="${
                                          service.response
                                        }" ></td>
                                    </div>
                                    <button onclick="updateServiceStatus('${service._id}',
                                    'accepted', this.parentElement.querySelector('#meetResponse').value
                                    )" class="btn btn-primary" >Approve</button>
                                    <button onclick="updateServiceStatus('${
                                      service._id
                                    }', 'pending', 
                                        this.parentElement.querySelector('#meetResponse').value
                                    )" class="btn btn-danger" >Reject</button>
                                </div>
                            </div>
                </div>
`
          );
        });
      }
      function updateServiceStatus(id, status, response) {
        $.post(
          "http://localhost:4000/api/updateServiceStatus",
          {
            id,
            status,
            response,
          },
          function (data) {
            if (data.status == "success") {
              alert("Updated");
              location.reload();
            } else {
              alert("Something went wrong");
              console.log(data);
            }
          }
        );
      }
      
      </script>
